generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses Vercel's default env var
  directUrl = env("POSTGRES_URL_NON_POOLING") // For direct connections (migrations)
}

model User {
  id            String    @id // Discord ID
  username      String
  avatar        String?
  isAdmin       Boolean   @default(false)
  reportsMade   Report[]  @relation("Reporter")
  createdAt     DateTime  @default(now())
}

model Report {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Incident Details
  accusedId   String    // ID of the player being reported
  reason      String
  description String?
  evidence    String    // URL to video/image
  
  // Status
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED, INVESTIGATING
  adminNotes  String?
  
  // Relations
  reporterId  String
  reporter    User      @relation("Reporter", fields: [reporterId], references: [id])
  handledBy   String?   // Admin ID who processed the report
